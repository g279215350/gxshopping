<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yahaha.gxshopping.mapper.ProductExtMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="yahaha.gxshopping.domain.ProductExt">
        <id column="id" property="id" />
        <result column="description" property="description" />
        <result column="richContent" property="richContent" />
        <result column="product_id" property="productId" />
        <result column="viewProperties" property="viewProperties" />
        <result column="skuProperties" property="skuProperties" />
    </resultMap>

    <delete id="deleteByProductId">
        delete from t_product_ext where product_id = #{id}
    </delete>

    <select id="findByProductId" resultType="yahaha.gxshopping.domain.ProductExt">
        select * from t_product_ext where product_id = #{id}
    </select>

</mapper>
